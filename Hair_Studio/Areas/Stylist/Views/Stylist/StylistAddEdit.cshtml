
@{
    ViewData["Title"] = "Stylist Add/Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@model Hair_Studio.Areas.Stylist.Models.StylistModel


<main id="main" class="main">
    <h1><u><b>Add/Edit Stylist</b></u></h1>
    <br />



    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Stylist Form</h5>

            <!-- No Labels Form -->
            <form class="row g-3" method="post" asp-area="Stylist" asp-controller="Stylist" asp-action="StylistSave">
                @Html.HiddenFor(x => x.StylistID)
                <div class="col-md-12">
                    <input type="text" asp-for="StylistName" class="form-control" placeholder="Stylist Name " />
                    <span asp-validation-for="StylistName" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <input type="text" asp-for="Phone" class="form-control" placeholder="Phone Number " />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="col-md-6">
                    <input type="text" asp-for="Email" class="form-control" placeholder="Email " />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="col-12">
                    <select class="form-select" asp-for="ServiceID"  asp-items="@(new SelectList(ViewBag.ServiceList,"ServiceID","ServiceName"))">
                        <option selected>Select Service</option>
                    </select>   
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <div class="col-12">
                    <input type="text" asp-for="ImageURL" class="form-control" placeholder="Pic an Image" />
                    <span asp-validation-for="ImageURL" class="text-danger"></span>
                </div>
                <br />
                <div class="text-center">
                    <div>
                        <button type="submit" class="btn btn-primary">Save</button>
                        <a class="btn btn-danger" asp-area="Stylist" asp-controller="Stylist" asp-action="StylistList">Back</a>
                    </div>
                </div>
            </form><!-- End No Labels Form -->

        </div>
    </div>
</main>

@section Scripts
    {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}